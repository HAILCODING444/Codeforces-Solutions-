#include <bits/stdc++.h>
using namespace std;
 
#define ll long long int 
#define mp make_pair
#define pb push_back
#define tc int t; cin >> t; while(t--)
#define imax INT_MAX
#define imin INT_MIN
#define llmax LLONG_MAX
#define llmin LLONG_MIN
#define nl "\n"

int main()
{
    tc{
        ll n , m ; 
        cin>>n>>m ; 
        
        ll x = n*m ; 
        
        ll ans ; 
        if(x%2 ==0){
            ans = (n*m)/2 ; 
        }else{
            ans = (n*m+1)/2 ; 
        }
        
        cout<<ans<<nl ; 
    } 
    return 0;
}
